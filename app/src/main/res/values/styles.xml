<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/background</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat">
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleBlack">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EventTitle">
        <item name="android:textSize">@dimen/eventTitle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:typeface">monospace</item>
        <item name="android:fontFamily">serif-monospace</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="Subtitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/subtitle</item>
    </style>

    <style name="SubtitleBlack">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/subtitle</item>
    </style>

    <style name="ItemTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/itemTitle</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="body">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/body</item>
    </style>

    <style name="bodyBlack">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/body</item>
    </style>

</resources>
