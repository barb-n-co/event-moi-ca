<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root_layout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/iv_banner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/bannerevent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                    android:id="@+id/tv_eventName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    tools:text="Event"
                    style="@style/EventTitle"
                    app:layout_constraintTop_toBottomOf="@id/iv_banner"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <View
                    android:id="@+id/hr1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/colorPrimary"
                    app:layout_constraintTop_toBottomOf="@+id/tv_eventName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                    android:id="@+id/tv_orga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/detail_event_organisateur"
                    style="@style/ItemTitle"
                    app:layout_constraintTop_toBottomOf="@+id/hr1"
                    app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                    android:id="@+id/tv_eventOrga"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    tools:text="Organisateur"
                    android:textSize="@dimen/itemTitle"
                    app:layout_constraintStart_toEndOf="@+id/tv_orga"
                    app:layout_constraintTop_toBottomOf="@+id/hr1"
                    app:layout_constraintEnd_toStartOf="@+id/iv_generate_qrCode"/>

            <TextView
                    android:id="@+id/tv_dateS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/detail_event_startDate"
                    style="@style/ItemTitle"
                    app:layout_constraintTop_toBottomOf="@+id/tv_eventOrga"
                    app:layout_constraintStart_toStartOf="@+id/tv_orga"/>

            <TextView
                    android:id="@+id/tv_eventDateStart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    tools:text="11/05/2019"
                    android:textSize="@dimen/itemTitle"
                    app:layout_constraintTop_toTopOf="@+id/tv_dateS"
                    app:layout_constraintStart_toEndOf="@+id/tv_dateS"
                    app:layout_constraintEnd_toStartOf="@+id/iv_generate_qrCode"/>

            <TextView
                    android:id="@+id/tv_dateE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/detail_event_endDate"
                    style="@style/ItemTitle"
                    app:layout_constraintTop_toBottomOf="@+id/tv_dateS"
                    app:layout_constraintStart_toStartOf="@+id/tv_dateS"/>

            <TextView
                    android:id="@+id/tv_eventDateEnd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="15/05/2019"
                    android:textSize="@dimen/itemTitle"
                    app:layout_constraintTop_toBottomOf="@+id/tv_eventDateStart"
                    app:layout_constraintStart_toStartOf="@+id/tv_eventDateStart"
                    android:layout_marginTop="8dp"/>

            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_eventDateEnd"
                    android:id="@+id/tv_listParticipant"
                    android:layout_marginStart="32dp" android:textSize="16sp" android:layout_marginTop="16dp"
                    android:textAllCaps="false"/>

            <ImageView
                    android:id="@+id/iv_share_deepLink"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_baseline_link"
                    android:visibility="invisible"
                    android:layout_margin="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/hr1"
                    app:layout_constraintBottom_toTopOf="@+id/hr2"
                    app:layout_constraintEnd_toStartOf="@+id/iv_generate_qrCode"/>

            <ImageView
                    android:id="@+id/iv_generate_qrCode"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="24dp"
                    android:src="@drawable/ic_load_qrcode"
                    android:visibility="invisible"
                    app:layout_constraintTop_toBottomOf="@+id/hr1"
                    app:layout_constraintBottom_toTopOf="@+id/hr2"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <View
                    android:id="@+id/hr2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/colorPrimary"
                    app:layout_constraintTop_toBottomOf="@+id/tv_listParticipant"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                    android:id="@+id/tv_eventDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:padding="4dp"
                    android:justificationMode="inter_word"
                    tools:text="Ceci est une description..."
                    android:textSize="@dimen/itemTitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/hr2"
                    app:layout_constraintHorizontal_bias="0.0"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_listImage"
                    tools:listitem="@layout/list_pic_event"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"

                    android:layout_marginBottom="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_eventDescription"
                    app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <io.github.kobakei.materialfabspeeddial.FabSpeedDial
            android:id="@+id/fabmenu_detail_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            app:fab_fabDrawableTint="@color/white"
            app:fab_miniFabDrawableTint="@color/white"
            app:fab_fabBackgroundColor="@color/colorAccent"
            app:fab_miniFabBackgroundColor="@color/colorAccent"
            app:fab_miniFabTextBackground="@drawable/fab_label_back"
            app:fab_miniFabTextColor="@android:color/white"
            app:fab_extraMargin="-12dp"
            app:fab_fabDrawable="@drawable/ic_menu_fab"
            app:fab_menu="@menu/menu_fab_detail_event"
            tools:ignore="MissingPrefix"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>