<?xml version="1.0" encoding="utf-8"?>
<ScrollView              xmlns:android="http://schemas.android.com/apk/res/android"
                         xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"

                         android:layout_width="match_parent" android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
<androidx.constraintlayout.widget.ConstraintLayout
 android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".ui.fragment.DetailEventFragment">
        <TextView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:text="Event" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:textSize="30sp" android:id="@+id/tv_eventName"
                android:gravity="center" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"/>
        <TextView
                android:text="Organisateur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_orga" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_eventName" android:layout_marginTop="8dp"
                android:textStyle="bold"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_eventOrga" app:layout_constraintStart_toEndOf="@+id/tv_orga"
                app:layout_constraintTop_toBottomOf="@+id/tv_eventName" android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"/>
        <TextView
                android:text="Date de debut :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_dateS"
                app:layout_constraintTop_toBottomOf="@+id/tv_eventOrga"
                android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="@+id/tv_eventOrga"
                android:textStyle="bold"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_eventDateStart"
                app:layout_constraintTop_toTopOf="@+id/tv_dateS" app:layout_constraintStart_toEndOf="@+id/tv_dateS"
                android:layout_marginStart="16dp"/>
        <TextView
                android:text="Date de fin :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_dateE"
                app:layout_constraintTop_toBottomOf="@+id/tv_dateS" android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@+id/tv_dateS" android:textStyle="bold"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_eventDateEnd"
                app:layout_constraintTop_toBottomOf="@+id/tv_eventDateStart"
                app:layout_constraintStart_toStartOf="@+id/tv_eventDateStart" android:layout_marginTop="8dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_eventDescription" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/tv_dateE"
                android:layout_marginTop="20dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.0"/>
    <ListView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_eventDescription" android:layout_marginTop="24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
