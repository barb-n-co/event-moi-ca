<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:orientation="vertical">

    <TextView
            android:id="@+id/tv_name_invitation_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EurockÃ©ennes"
            android:layout_marginEnd="8dp"
            android:padding="4dp"
            style="@style/Subtitle"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_startDate_invitation_fragment"/>

    <TextView
            android:id="@+id/tv_endDate_invitation_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15/04/2018"
            android:layout_marginStart="4dp"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/tv_name_invitation_fragment"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/tv_startDate_invitation_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14/04/2018"
            android:layout_marginStart="4dp"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/tv_name_invitation_fragment"
            app:layout_constraintStart_toStartOf="@id/tv_name_invitation_fragment"/>

    <androidx.cardview.widget.CardView
            android:id="@+id/cardView_message_chat_fragment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:layout_constraintTop_toBottomOf="@id/tv_endDate_invitation_fragment"
            app:layout_constraintStart_toStartOf="@id/tv_name_invitation_fragment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <TextView
                android:id="@+id/tv_message_chat_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="Ceci est une description..."/>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>