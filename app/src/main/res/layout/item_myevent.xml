<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:tools="http://schemas.android.com/tools"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/tv_name_myevent_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EurockÃ©ennes"
                android:layout_marginEnd="8dp"
                android:padding="4dp"
                style="@style/Subtitle"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_startDate_myevent_item"/>

        <TextView
                android:id="@+id/tv_startDate_myevent_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Du 14/04/2018 au 15/04/2018"
                android:layout_marginStart="4dp"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/tv_name_myevent_item"
                app:layout_constraintStart_toStartOf="@id/tv_name_myevent_item"/>

        <TextView
                android:id="@+id/tv_description_myevent_item"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:padding="4dp"
                android:justificationMode="inter_word"
                app:layout_constraintTop_toBottomOf="@+id/tv_startDate_myevent_item"
                app:layout_constraintStart_toStartOf="@+id/tv_name_myevent_item"
                app:layout_constraintEnd_toStartOf="@+id/b_refuse_myevent_item"
                android:text="Ceci est une description..."/>

        <ImageView
                android:id="@+id/b_refuse_myevent_item"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_cancel"
                android:layout_margin="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>