<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.DetailPhotoFragment">

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:id="@+id/iv_photo"
                    android:src="@color/colorPrimaryDark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:adjustViewBounds="true"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

            </ImageView>

            <TextView
                    android:id="@+id/tv_auteur"
                    tools:text="auteur"
                    android:textColor="@android:color/white"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@id/iv_photo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_like"
            />

            <TextView
                    android:id="@+id/tv_like"
                    tools:text="100"
                    android:textColor="@android:color/white"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:drawableStart="@drawable/ic_thumb_up"
                    android:drawablePadding="2dp"
                    app:layout_constraintStart_toEndOf="@id/tv_auteur"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_auteur"
            />

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/tv_auteur" android:layout_marginTop="24dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    tools:listitem="@layout/comment_item"
            />

            <EditText
                    android:id="@+id/et_comments"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textAutoComplete"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/colorPrimary"
                    android:hint="@string/add_comment_to_photo"
                    android:ems="10"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="12dp"
                    android:ellipsize="none"
                    android:maxLines="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btn_validate_comment"
                    app:layout_constraintTop_toTopOf="@id/btn_validate_comment"
                    app:layout_constraintBottom_toBottomOf="@id/btn_validate_comment"
            />

            <ImageView
                    android:id="@+id/btn_validate_comment"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/validate_selector"
                    android:layout_marginEnd="8dp"
                    android:focusable="true"
                    android:clickable="true"
                    app:layout_constraintStart_toEndOf="@id/et_comments"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rv_comments"
            />

            <io.github.kobakei.materialfabspeeddial.FabSpeedDial
                    android:id="@+id/fab_detail_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    app:fab_fabDrawableTint="@color/white"
                    app:fab_miniFabDrawableTint="@color/white"
                    app:fab_fabBackgroundColor="@color/colorAccent"
                    app:fab_miniFabBackgroundColor="@color/colorAccent"
                    app:fab_miniFabTextBackground="@drawable/fab_label_back"
                    app:fab_miniFabTextColor="@android:color/white"
                    app:fab_extraMargin="-12dp"
                    app:fab_fabDrawable="@drawable/ic_menu_fab"
                    tools:ignore="MissingPrefix"
                    app:layout_constraintEnd_toEndOf="@id/iv_photo"
                    app:layout_constraintBottom_toBottomOf="@id/iv_photo"
            />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>