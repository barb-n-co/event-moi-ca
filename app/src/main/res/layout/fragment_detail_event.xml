<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:id="@+id/iv_banner"
                    android:layout_margin="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:srcCompat="@drawable/bannerevent"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:id="@+id/tv_eventName"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/iv_banner"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    tools:text="Event" android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:typeface="monospace"
                    android:fontFamily="serif-monospace"/>

            <View
                    android:id="@+id/hr1"
                    app:layout_constraintTop_toBottomOf="@+id/tv_eventName"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:background="#c0c0c0" android:layout_marginTop="8dp"/>

            <TextView
                    android:text="@string/detail_event_organisateur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_orga"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/hr1"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp" android:textSize="16sp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_eventOrga"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toEndOf="@+id/tv_orga"
                    app:layout_constraintTop_toBottomOf="@+id/hr1"
                    android:layout_marginTop="8dp"
                    tools:text="Organisateur" android:textSize="16sp"/>

            <TextView
                    android:text="@string/detail_event_startDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_dateS"
                    app:layout_constraintTop_toBottomOf="@+id/tv_eventOrga"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textStyle="bold" android:textSize="16sp" android:layout_marginStart="8dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_eventDateStart"
                    app:layout_constraintTop_toTopOf="@+id/tv_dateS"
                    app:layout_constraintStart_toEndOf="@+id/tv_dateS"
                    android:layout_marginStart="16dp"
                    tools:text="11/05/2019" android:textSize="16sp"/>

            <TextView
                    android:text="@string/detail_event_endDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_dateE"
                    app:layout_constraintTop_toBottomOf="@+id/tv_dateS"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="@+id/tv_dateS"
                    android:textStyle="bold" android:textSize="16sp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_eventDateEnd"
                    app:layout_constraintTop_toBottomOf="@+id/tv_eventDateStart"
                    app:layout_constraintStart_toStartOf="@+id/tv_eventDateStart"
                    android:layout_marginTop="8dp"
                    tools:text="15/05/2019" android:textSize="16sp"/>

            <View
                    android:id="@+id/hr2"
                    app:layout_constraintTop_toBottomOf="@+id/tv_eventDateEnd"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:background="#c0c0c0" android:layout_marginTop="8dp"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_eventDescription"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/hr2"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:padding="4dp"
                    android:justificationMode="inter_word"
                    tools:text="Ceci est une description..." android:textSize="16sp"/>

            <androidx.recyclerview.widget.RecyclerView
                    tools:listitem="@layout/list_pic_event"
                    android:id="@+id/rv_listImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_eventDescription"
                    android:layout_marginTop="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <io.github.kobakei.materialfabspeeddial.FabSpeedDial
            android:id="@+id/fabmenu_detail_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            app:fab_fabBackgroundColor="@color/colorAccent"
            app:fab_miniFabBackgroundColor="@color/colorAccent"
            app:fab_miniFabTextBackground="@drawable/fab_label_back"
            app:fab_miniFabTextColor="@android:color/white"
            app:fab_extraMargin="-12dp"
            app:fab_fabDrawable="@drawable/ic_menu_fab"
            app:fab_menu="@menu/menu_fab_detail_event"
            tools:ignore="MissingPrefix"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>