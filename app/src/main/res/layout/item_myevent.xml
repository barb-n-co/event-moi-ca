<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="16dp"
        android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

        <TextView
                android:id="@+id/tv_name_myevent_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                style="@style/SubtitleRed"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_startDate_myevent_item"
                app:layout_constraintEnd_toStartOf="@+id/b_refuse_myevent_item"
                tools:text="EurockÃ©ennes"/>

        <TextView
                android:id="@+id/tv_startDate_myevent_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/tv_name_myevent_item"
                app:layout_constraintStart_toStartOf="@id/tv_name_myevent_item"
                app:layout_constraintEnd_toStartOf="@+id/b_refuse_myevent_item"
                tools:text="Du 14/04/2018 au 15/04/2018"/>

        <ImageView
                android:id="@+id/b_refuse_myevent_item"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_avatar"
                android:layout_margin="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>