<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_for_fragment_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/iv_banner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/bannerevent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                    android:id="@+id/tv_eventName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    tools:text="Event"
                    style="@style/Title"
                    app:layout_constraintTop_toBottomOf="@id/iv_banner"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <View
                    android:id="@+id/hr1"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginStart="64dp"
                    android:layout_marginEnd="64dp"
                    android:background="@color/colorPrimary"
                    app:layout_constraintTop_toBottomOf="@+id/tv_listParticipant"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                    android:id="@+id/tv_orga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/detail_event_organisateur"
                    style="@style/ItemTitle"
                    app:layout_constraintTop_toBottomOf="@+id/hr1"
                    app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                    android:id="@+id/tv_eventOrga"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    tools:text="Organisateur"
                    style="@style/ItemTitle"
                    app:layout_constraintStart_toEndOf="@+id/tv_orga"
                    app:layout_constraintTop_toBottomOf="@+id/hr1"
                    app:layout_constraintEnd_toStartOf="@+id/iv_generate_qrCode"/>

            <TextView
                android:text="@string/tv_place_detail_event_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_place_detail_event"
                app:layout_constraintTop_toBottomOf="@+id/tv_eventOrga"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:textStyle="bold" android:textSize="16sp" android:layout_marginStart="8dp"/>

            <TextView
                    android:id="@+id/tv_eventPlace"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@+id/tv_place_detail_event"
                    android:layout_marginStart="16dp"
                    android:linksClickable="true"
                    tools:text="Test" android:textSize="16sp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_eventOrga" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/iv_generate_qrCode"/>

            <TextView
                    android:id="@+id/tv_dateS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/detail_event_startDate"
                    style="@style/ItemTitle"
                    app:layout_constraintTop_toBottomOf="@+id/tv_eventPlace"
                    app:layout_constraintStart_toStartOf="@+id/tv_orga"/>

            <TextView
                    android:id="@+id/tv_eventDateStart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    tools:text="11/05/2019"
                    android:textSize="@dimen/itemTitle"
                    style="@style/ItemTitle"
                    app:layout_constraintTop_toTopOf="@+id/tv_dateS"
                    app:layout_constraintStart_toEndOf="@+id/tv_dateS"
                    app:layout_constraintEnd_toStartOf="@+id/iv_generate_qrCode" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_eventPlace"/>

            <TextView
                    android:id="@+id/tv_dateE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/detail_event_endDate"
                    style="@style/ItemTitle"
                    app:layout_constraintTop_toBottomOf="@+id/tv_dateS"
                    app:layout_constraintStart_toStartOf="@+id/tv_dateS"/>

            <TextView
                    android:id="@+id/tv_eventDateEnd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="15/05/2019"
                    style="@style/ItemTitle"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_eventDateStart"
                    app:layout_constraintStart_toEndOf="@+id/tv_dateE"
                    android:layout_marginTop="8dp"/>

            <com.google.android.material.chip.Chip
                    android:id="@+id/tv_listParticipant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="participant"
                    app:chipBackgroundColor="@color/colorPrimary"
                    app:chipStrokeWidth="1dp"
                    app:chipStrokeColor="@color/black"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_eventName"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                    android:id="@+id/iv_generate_qrCode"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="24dp"
                    android:src="@drawable/ic_load_qrcode"
                    android:visibility="invisible"
                    app:layout_constraintTop_toBottomOf="@+id/hr1"
                    app:layout_constraintBottom_toTopOf="@+id/hr2"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <View
                    android:id="@+id/hr2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="64dp"
                    android:layout_marginEnd="64dp"
                    android:background="@color/colorPrimary"
                    app:layout_constraintTop_toBottomOf="@+id/tv_dateE"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                    android:id="@+id/tv_eventDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"
                    android:padding="4dp"
                    android:justificationMode="inter_word"
                    tools:text="Ceci est une description..."
                    style="@style/ItemTitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/hr2"
            />

            <Button
                    android:id="@+id/b_exit_detail_event_fragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/b_exit_detail_event_fragment"
                    app:layout_constraintTop_toBottomOf="@+id/tv_eventDescription"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/rv_listImage"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_listImage"
                    tools:listitem="@layout/list_pic_event"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_eventDescription"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/alert_layout_detail_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_eventDescription"
                    app:layout_constraintBottom_toBottomOf="parent"
            >

                <ImageView
                        android:id="@+id/iv_alert_not_accepted_event"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_locked"
                        android:tint="@color/grey"
                        android:visibility="gone"
                        tools:visibility="visible"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/not_already_accepted_alert"
                />

                <TextView
                        android:id="@+id/not_already_accepted_alert"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:visibility="gone"
                        tools:visibility="visible"
                        android:text="Vous n'avez pas encore accepté cet évènement"
                        android:textAlignment="center"
                        app:layout_constraintTop_toBottomOf="@id/iv_alert_not_accepted_event"
                        app:layout_constraintBottom_toBottomOf="parent"
                />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <io.github.kobakei.materialfabspeeddial.FabSpeedDial
            android:id="@+id/fabmenu_detail_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:visibility="gone"
            tools:visibility="visible"
            app:fab_fabBackgroundColor="@color/colorAccent"
            app:fab_miniFabBackgroundColor="@color/colorAccent"
            app:fab_miniFabTextBackground="@drawable/fab_label_back"
            app:fab_extraMargin="-12dp"
            app:fab_fabDrawable="@drawable/ic_menu_fab"
            app:fab_menu="@menu/menu_fab_detail_event"
            tools:ignore="MissingPrefix"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>